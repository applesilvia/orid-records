<div class="alert alert-success text-center" role="alert">
  <h4 class="alert-heading">紀錄一下今天的 ORID 吧！ </h4>
  <br>
  <%= link_to '立即新增', new_orid_path, class: 'btn btn-primary' %>
</div>

<% if user_signed_in? %>
<div class="row">
  <% @orids.each do |orid| %>
  <div class="col-md-3">
    <div class="panel panel-default">
      <div class="panel-heading"><%= orid.created_at.strftime('建立時間： %Y-%m-%d %H:%M')  %></div>
      <div class="panel-body">
        <h3>Objective</h3>
        <%= simple_format(orid.objective) %>
        <br>
        <h3>Reflective</h3>
        <%= simple_format(orid.reflective) %>
        <br>
        <h3>Interpretive</h3>
        <%= simple_format(orid.interpretive) %>
        <br>
        <h3>Decisional</h3>
        <%= simple_format(orid.decisional) %>
        <br>
      </div>
    </div>
  </div>
  <% end %>
</div>
<% end %>
